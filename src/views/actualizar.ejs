<%- include('header.ejs') %> 
    <div>
        <h2>Detalle de la Pelicula: <i> <%= peliculas.title %></i></h2>
    </div>
    <div>
        <form action="/movies/edit/<%=peliculas.id %>?_method=PUT" method="POST">
                <div>
                    <label for="title">Titulo:</label>
                    <input type="text" id="name" name="title" value="<%= peliculas.title %>" placeholder = '<%= peliculas.title %>'>
                </div>
                <div>
                    <label for="rating">Rating:</label>
                    <input type="text" id="price" name="rating" value="<%= peliculas.rating %>" placeholder = '<%= peliculas.rating %>'>
                </div>
                <div>
                    <label for="awards">Galardones :</label>
                    <input type="text" id="discount" name="awards" value="<%= peliculas.awards %>" placeholder = '<%= peliculas.awards %>'>
                </div>
                <div>
                    <label for="length">Duracion:</label>
                    <input type="text" id="discount" name="length" value="<%= peliculas.length %>" placeholder = '<%= peliculas.length %>'>
                </div>
                <div>
                    <label for="release_date">Estreno:</label>
                    <input type="text"  id="discount" name="release_date" value="<%= peliculas.release_date %>" placeholder = '<%= peliculas.release_date %>'>
                </div>
                <div>
                    <label for="category">Genero:</label>
                    <select name="genre_id" id="">
                        <%generos.forEach(genero => {%>
                            <% if (peliculas.GenreId === genero.id) { %>
                                <option value = '<%= genero.id%>' selected ><%= genero.name %></option>
                                <% } else { %>
                                <option value = '<%= genero.id%>' ><%= genero.name %></option>
                            <% } %> 
                        <%})%>
                    </select>
                </div>
                <div>
                    <label for="category">Seleccione Actor:</label>
                    <select name="actores" id="" multiple>
                        <% actores.forEach(actor => {%>
                            <% if (peliculas.actores.some(actorPelicula=>actorPelicula.id == actor.id)) { %>
                                <option value = '<%= actor.id%>' selected ><%= actor.first_name %><%= actor.last_name %></option>
                            <% } else { %>
                                <option value = '<%= actor.id%>' ><%= actor.first_name %><%= actor.last_name %></option>
                            <% } %> 
                        <%})%>
                    </select>
                </div>
                <div>
                    <button type="submit">Guardar</button>
                </div>
        </form>
    </div>
<%- include('footer.ejs') %>